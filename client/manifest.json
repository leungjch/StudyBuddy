{
  "name": "studybuddy",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "description": "study buddy ...",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/content/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icondefault.png",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}